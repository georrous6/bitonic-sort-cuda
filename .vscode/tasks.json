{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Debug",
      "type": "shell",
      "command": "make",
      "args": ["BUILD_TYPE=debug", "-j4"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Build the project using Make"
    },
    {
      "label": "Build Release",
      "type": "shell",
      "command": "make",
      "args": ["BUILD_TYPE=release", "-j4"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": ["$gcc"],
      "detail": "Build the project using Make in release mode"
    }
  ]
}
